#!/usr/bin/env bash

if [ "${LANG:0:2}" = "pt" ]
then
    BIGBASHVIEW_LANG="pt"

elif [ "${LANG:0:2}" = "es" ]
then
    BIGBASHVIEW_LANG="es"

else
    BIGBASHVIEW_LANG="en"
fi

cd /usr/share/bigbashview/bcc/apps/biglinux-webapps
LANGUAGE=$BIGBASHVIEW_LANG bigbashview index.sh.htm -s 1030x710 -w fixed -i default.png -n 'BigLinux WebApps'
rm -f /tmp/*.png
